---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Events Page Astro">
	<main>
		<head>
			<title>Events Page GDSC</title>
			<link rel="stylesheet" type="text/css" href="style.css">
		</head>
	
		<body>
		<img class="devlogo" src="https://seeklogo.com/images/G/google-developers-logo-F8BF3155AC-seeklogo.com.png">
			<header>
				  <div>
				<ul>
				  <li><a class="chapterButton" href="#">Join Chapter</a></li>
				  </ul>
				  </div>
		  </header>
		  <section>
		  <h1>Upcoming Events</h1>
		  <div class="eventitemdiv">	
				  <img class="eventitemlogo" src="GDSCNodeJsLogoPic.webp">
				  <h4>Node.js Tutorial #2</h4>
				  <p>Visit our next workshop for Node.js!</p>
				  <a href="#" class="rsvpButton">RSVP</a>
			  </div>
		  <div class="eventitemdiv">	
				  <img class="eventitemlogo" src="HackForGood.png">
				  <h4>Hack For Good Hackathon</h4>
				  <p>Check out our Hack For Good Hackathon</p>
				  <a href="#" class="rsvpButton">RSVP</a>
			  </div>
	
	  </body>
		</body>
	</main>
</Layout>

<style>
	main {
  background-image: url("https://wallpapers.com/images/hd/colorful-google-polka-dots-ot2t9bbzehsjggdx.jpg");
  background-color: white;
  height: fit-content;
  background-size: cover;
  background-position: center;
  margin: auto;
}

.eventitemdiv {
  border-radius: 12px;
  text-align: center;
  background-color: black;
  width: 45%;
  border: 5px solid green;
  padding: 30px 0px 60px 20px;
  margin: 50px;
}

.eventitemlogo {
  border-radius: 50%;
    float: left;
    width:  150px;
    height: 150px;
    object-fit: cover;
}

.devlogo {
    float: left;
    width:  100px;
}

li {
    list-style-type: none;
}

h1 {
  text-align: center;
  color: white;
  font-family: 'Google Sans', sans-serif;
  font-weight: bolder;
  font-size: 2.25em;
}


h4 {
  text-align: left;
  color: white;
  font-family: 'Google Sans', sans-serif;
  font-weight: bolder;
  font-size: 1.2em;
  text-indent: 50px;
}

p {
  text-align: left;
  color: white;
  font-family: 'Google Sans', sans-serif;
  font-weight: bolder;
  text-indent: 50px;

}


a {
  color: white;
  font-family: 'Google Sans', sans-serif;
  font-weight: bolder;
  font-size: 1.2em;
}

.chapterButton {
  float: right;
  background-color: blue;
  border-radius: 20px;
  display: block;
  font-weight: bolder;
  text-decoration: none;
  text-align: center;
  width: 150px;
  padding: 10px 0px 8px 0px;
  border-radius: 8px;
  font-size: 1.5em;
}

.rsvpButton {
  float: left;
  background-color: blue;
  display: block;
  text-decoration: none;
  width: 80px;
  text-align: center;
  padding: 10px 0px 8px 0px;
  border-radius: 8px;
  position: relative;
}
</style>
